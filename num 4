#include <iostream>
#include <vector>
#include <cmath>
using namespace std;
int main() {
    int n;
    cin >> n;

    vector<vector<int>> matrix(n, vector<int>(n));
    int primary = 0, secondary = 0;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> matrix[i][j];
            if (i == j)
                primary += matrix[i][j];
            if (i + j == n - 1)
                secondary += matrix[i][j];
        }
    }
    cout << abs(primary - secondary) << endl;
    return 0;
}
